{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */

    /* Language and Environment */
    "target": "ESNext",

    /* Modules */
    "module": "NodeNext",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@constants": ["constants"]
    },
    "resolveJsonModule": true,

    /* Emit */
    "outDir": "dist",

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,

    /* Completeness */
    "skipLibCheck": true,

    /* Additional Checks */
    "noUnusedParameters": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
